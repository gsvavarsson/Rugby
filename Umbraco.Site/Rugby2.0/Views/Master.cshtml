 @inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = null;
	
	var home = @CurrentPage.Site();
	string bodyClass = Model.Content.UrlName;
}

<!DOCTYPE html>
<html lang="en">
	<head>
		@Html.Partial("_Meta")

		<!-- CSS -->
		<link rel="stylesheet" href="/css/rustikus/rustikus.css" type="text/css" />

	<!--[if IE]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<script>
		window.slimmage = { tryWebP: true, verbose: false };
	</script>

		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
			<script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
			<script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>

	<body class="@bodyClass">
		<header>
			<nav class="main-nav">
				@{ Html.RenderPartial("MainNavigation"); }
			</nav>
		</header>

		@RenderBody()

		<footer class="field dark">
			<div class="container">
				<div class="row">
			
			@{ Html.RenderPartial("BottomNavigation"); }

				</div>
			</div>
		</footer>
		
		<!-- Javascripts -->
		<script src="/scripts/app/compiled.js" type="text/javascript"></script>
	</body>
</html>